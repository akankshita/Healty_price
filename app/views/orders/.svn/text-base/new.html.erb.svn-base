def mask_number(number)
	if number == nil || number == ""
		""
	else
		"XXXX-XXXX-XXXX-" + number[number.size-4, number.size-1]
	end
end

def states(sel)
	if sel == nil || sel == ""
		return @States
	else
		return @States.gsub(sel + "'>", sel + "' selected>")
	end
end %>

