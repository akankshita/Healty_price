<h1>Practice Areas</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @specialies.each do |specialty| %>
  <tr>
    <td><%=h specialty.name %></td>
    <td><%= link_to 'Show', specialty %></td>
    <td><%= link_to 'Edit', edit_specialty_path(specialty) %></td>
    <td><%= link_to 'Destroy', specialty, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Specialty', new_specialty_area_path %>