<% @file = File.open(Dir.pwd + "/public/mail_templates/new_order_customer.html.erb") %>
<% @template = @file.read %>

<%	@template = @template.gsub("{full_name}", @full_name) %>
<%	@template = @template.gsub("{order_number}", @order_number) %>
<%	@template = @template.gsub("{billing_code}", @billing_code) %>
<%	@template = @template.gsub("{pin}", @pin) %>
<%	@template = @template.gsub("{doctor.name}", @doctor.name) %>

<%	if @doctor.use_public_phone_number_in_emails == 1 %>
<%		@template = @template.gsub("{doctor.phone}", @doctor.phone + "<br/>") %>
<%	else %>
<%		@template = @template.gsub("{doctor.phone}", @doctor.public_phone + "<br/>") %>
<%	end %>

<%	@address = @doctor.address %>
<%	if @doctor.address2 != nil && @doctor.address2 != "" %>
<%		@address += ", " + @doctor.address2 %>
<%	end %>
<%	@address += ",<br/>" %>
<%	if @doctor.city != nil && @doctor.city != "" %>
<%		@address += @doctor.city + ", " %>
<%	end %>
<%	@address += @doctor.state_code + " " + @doctor.zipcode %>
<%	@template = @template.gsub("{doctor.address}", @address) %>

<%	@path = Dir.pwd + '/public/download/practice_area_documents/' %>
<%	@pdf_include = "" %>
<%	if File::exists?(@path + @order.specialty_service.specialty_id.inspect + '_document.pdf') %>
<%		@pdf_include = "<strong>Add-On Services Form - Click on the link to open the PDF. Please print it out and bring it with you on your visit.</strong><br/><br/>" %>
<%		@pdf_include += "<a style='text-decoration:none;' href='http://www.healthyprice.com/download/practice_area_documents/" + @order.specialty_service.specialty_id.inspect + "_document.pdf' target='_blank'><img src='http://www.healthyprice.com/images/pdf.gif' style='border:medium none; margin-bottom:-3px;' /> " + @order.specialty_service.specialty.name + "</a><br/><br/>" %>
<%	end %>
<%	@template = @template.gsub("{pdf_file}", @pdf_include) %>

<%= @template %>
