h2#nesting_title{
	color:#FFFFFF;
	background-color:#005CB8;
	padding:2px 5px 4px;
	margin-bottom:0;
	font-family:arial,sans-serif;
	font-size:160%;
	font-weight:bold;
	line-height:normal;
	border-right:1px solid #C5DBF7;
}

div.footer{
	background-color:#005CB8;
	color:#CCCCCC;
	font-family:arial,sans-serif;
	font-size:12px;
	font-weight:bold;
	margin-bottom:10px;
	padding:2px;
	padding-left:8px;
}

table#nesting h2#nesting_title{
	background-color:transparent;
	font-size:12px;
	color:#444444;
}

table#nesting div.footer{
	background-color:transparent;
	color:#444444;
	margin-bottom:0px;
}

table#nesting{
	border-right:1px solid #C5DBF7;
	margin-bottom:0px;
}

table#nesting a{
	font-weight:bold;
	color:#0066CC;
}
table#nesting a:hover{
	background-color:transparent;
}

div.actions{
	float:right;
	margin-bottom:10px;
	margin-right:10px;
}
tr.nested form{
	margin-bottom:10px;
	margin-left:10px;
	width:700px;
	float:left;
}
tr.nested form  a{
	font-size:14px;
	font-weight:bold;
}
tr.nested h4{
	margin-top:10px;
	color:#1F7F00;
	font-size:16px;
	font-weight:bold;
}

table#nesting tr.nested td{
	background-color:#DAFFCD;
	/*border:1px solid #7FCF00;
	padding:4px;*/
}
table#nesting tr.header td{
	background-color:#555555;
	color:#EEEEEE;
	font-weight:bold;
	border-left:1px solid #555555;
	padding:2px 5px;
	font-family:arial,sans-serif;
}
table#nesting tr.odd td{
	background-color:#E6F2FF;
}
table#nesting tr.even td{
	background-color:#FFFFFF;
}

table#nesting tr td a.nested_close{
	background:transparent url(../../../images/active_scaffold/default/close.gif) no-repeat scroll 0 0;
	float:right;
	height:17px;
	text-indent:-4000px;
	width:16px;
}

table#nesting tr td{
	border-bottom:1px solid #C5DBF7;
	border-left:1px solid #C5DBF7;
	font-family:Verdana,sans-serif;
	font-size:11px;
	padding:5px 4px;
	color:#333333;
}
